# ft_transcendence - Centralized Environment Configuration

# =============================================================================
# PORT CONFIGURATION  
# =============================================================================

# Backend API server port
BACKEND_PORT=3001

# Frontend development server port (React/Frontend standard)
FRONTEND_PORT=3000

# Database port (if using external DB)
DATABASE_PORT=5432

# Proxy/Nginx port
PROXY_PORT=8080

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host configuration
HOST=localhost

# Backend API URL (used by frontend)
BACKEND_URL=http://localhost:3001

# Frontend URL (used by backend for CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================

# Prisma database connection (relative to backend/)
DATABASE_URL="file:./dev.db"

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=ft-transcendence-dev-secret-change-in-production

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Node environment
NODE_ENV=development

# =============================================================================
# FRONTEND CONFIGURATION (Vite environment variables)
# =============================================================================

# Backend URL for API calls (used by frontend)
VITE_BACKEND_URL=http://localhost:3001

# =============================================================================
# FRONTEND CONFIGURATION (Vite environment variables)
# =============================================================================

# Backend port for frontend API calls (Vite needs VITE_ prefix)
VITE_BACKEND_PORT=3001
