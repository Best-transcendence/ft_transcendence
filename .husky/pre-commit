#!/bin/sh
if git diff --cached --name-only | grep -q "^backend/"; then
  echo "ğŸ” Backend files changed, running linter..."
  cd backend && npm run lint:fix
  if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Please fix the issues before committing."
    exit 1
  fi
  
  # Check for any remaining warnings or errors
  echo "ğŸ” Checking for remaining linting issues..."
  npm run lint
  if [ $? -ne 0 ]; then
    echo "âŒ Linting warnings/errors found. Please fix all issues before committing."
    exit 1
  fi
  echo "âœ… Backend linting passed!"
fi
