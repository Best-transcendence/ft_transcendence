{
  "compilerOptions": {
    // Output modern JS (Parcel handles transpile/bundle)
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Strict type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Output options (Parcel ignores but good practice)
    "sourceMap": true,
    "declaration": false,

    // Keep simple, no React/Node stuff
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}